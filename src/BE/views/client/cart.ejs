<%- include('layouts/head') %>
    <!-- Cart Start -->
    <div class="cart-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8">
                    <div class="cart-page-inner">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Tên sản phẩm</th>
                                        <th>Giá</th>
                                        <th>Số lượng</th>
                                        <th>Kích thước</th>
                                        <th>Màu sắc</th>
                                        <th>Tổng tiền</th>
                                        <th>Xoá</th>
                                    </tr>
                                </thead>
                                <tbody class="align-middle">
                                    <% cartProducts.forEach(cart => { %>
                                        <tr class="cart-product" data-id="<%= cart._id %>">
                                            <td>
                                                <div class="img">
                                                    <a href="#"><img src="<%= cart.productId.avatar %>" alt="Image"></a>
                                                    <p>
                                                        <%= cart.productId.name %>
                                                    </p>
                                                </div>
                                            </td>
                                            <td>
                                                <%= cart.productId.price %>
                                            </td>
                                            <td>
                                                <div class="qty">
                                                    <button class="btn-minus"><i class="fa fa-minus"></i></button>
                                                    <input type="text" value="<%= cart.quantity %>" name="quantity">
                                                    <button class="btn-plus"><i class="fa fa-plus"></i></button>
                                                </div>
                                            </td>
                                            <td>
                                                <%= cart.size %>
                                            </td>
                                            <td>
                                                <%= cart.color %>
                                            </td>
                                            <td class="total">
                                                <%= cart.quantity * cart.productId.price %>
                                            </td>
                                            <td><button class="remove-cart"><i class="fa fa-trash"></i></button></td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="cart-page-inner">
                        <div class="row">
                            <!-- <div class="col-md-12">
                                <div class="coupon">
                                    <input type="text" placeholder="Coupon Code" id="coupon-code" value="123">
                                    <button>Apply Code</button>
                                </div>
                            </div> -->
                            <div class="col-md-12">
                                <div class="cart-summary">
                                    <div class="cart-content">
                                        <h1>Tổng giỏ hàng</h1>
                                        <p>Tổng tiền<span id="sub-total">$99</span></p>
                                        <p>Phí vận chuyển<span id="ship-cost">$1</span></p>
                                        <h2>Tổng hóa đơn<span id="grand-total">$100</span></h2>
                                    </div>
                                    <div class="cart-btn">
                                        <button onClick="window.location.reload();">Update Cart</button>
                                        <button>Checkout</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Cart End -->
    <%- include('layouts/foot') %>
        <script src="/js/cart.js"></script>