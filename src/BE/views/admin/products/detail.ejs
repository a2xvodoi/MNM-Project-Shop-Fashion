<%- include('../layouts/head',{title: 'Chi tiết sản phẩm'}) %>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <h3>Chi tiết sản phẩm</h3>
        <div class="card-body">
            <div class="form-group">
                <label>Product Name: </label>
                <div><%= product.name %></div>
            </div>
            <div class="form-group">
                <label for="avatar">Avatar: </label><br>
                <img src="<%= product.avatar %> " alt="avatar" width="100px" height="100px" class="img-avatar my-3">
            </div>
            <div class="form-group">
                <label for="otherImg">Other Image: </label> <br>
                <% product.otherImg.forEach(img => { %>
                    <img src="<%= img %> " alt="avatar" width="100px" height="100px" class="my-3">
                <% }) %>
            </div>
            <div class="form-group">
                <label for="size_color">Size color:</label>
                <div>
                    <% product.size_color.forEach(element => { %>
                     <div>Size: <%= element.size %> - Color: <%= element.color %> - Quantity: <%= element.quantity %> </div>
                    <% }) %>
                </div>
            </div>
            <div class="form-group">
                <label for="price">Price:</label>
                <div><%= product.price %> </div>
            </div>
            <div class="form-group">
                <label for="description">Product Description:</label>
                <div class="border p-2">
                    <%- product.description %> 
                </div>
            </div>
            <div class="form-group">
                <label for="category">Category:</label>
                <div><%= product.category.name %> </div>
            </div>
            <div class="form-group">
                <a href="/admin/products/<%= product._id %>/edit" class="btn btn-primary">Chỉnh sửa</a>
                <button class="btn btn-danger" type="button">Xoá</button>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
<!-- Footer Start -->
<%- include('../partials/footer') %>
<!-- Footer Bottom End -->

<%- include('../layouts/foot')%>
